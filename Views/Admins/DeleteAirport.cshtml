@model LAPTRINHWEB.Models.Airport

@{
    ViewBag.Title = "DeleteAirport";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    dd {
        padding: 2px;
        color: black;
        border: solid 1px;
        border-radius: 5px;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        color: #4CAF50; /* Thay đổi màu chữ của phần nội dung thành màu xanh lá */
    }

    h2, h3 {
        color: #4CAF50;
        text-align: center;
        padding: 10px;
        font-size: 2em; /* Tăng kích thước chữ của tiêu đề */
        margin-bottom: 20px;
    }

    .form-horizontal {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    }

        .form-horizontal h4 {
            color: #4CAF50;
            text-align: center;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .form-horizontal .control-label {
        text-align: left;
    }

    .form-horizontal .form-control {
        border-radius: 5px;
        border: 2px solid #ddd;
    }

        .form-horizontal .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px #4CAF50;
        }

    .btn-default {
        background-color: #4CAF50;
        color: white;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-default:hover {
            background-color: #45a049;
        }

    .text-danger {
        color: #f44336;
    }

    .back-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

        .back-link:hover {
            background-color: #45a049;
        }
</style>

<h3>Are you sure you want to delete this?</h3>
<div class="form-horizontal">
    <h2>Airport</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AirportName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AirportName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

    </dl>


</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "ManagerAirport")
    </div>
}
