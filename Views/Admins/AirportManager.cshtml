@model IEnumerable<LAPTRINHWEB.Models.Airport>

@{
    ViewBag.Title = "AirportManager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<p>
    @Html.ActionLink("Create New", "AddNewAirport")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AirportName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AirportName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAirport", new { id=item.AirportID }) |
            @Html.ActionLink("Detail", "DetailAirport", new { id=item.AirportID }) |
            @Html.ActionLink("Delete", "DeleteAirport", new { id=item.AirportID })
        </td>
    </tr>
}

</table>
