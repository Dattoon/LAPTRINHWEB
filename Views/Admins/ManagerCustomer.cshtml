@model IEnumerable<LAPTRINHWEB.Models.Customer>

@{
    ViewBag.Title = "ManagerCustomer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    <a href="@Url.Action("AddNewCustomer")" class="create-link">Create New</a> <!-- Sử dụng class create-link cho liên kết -->
</p>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #4CAF50; /* Thay đổi màu nền của trang thành màu xanh lá */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
        font-size: 0.9em;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 3px;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #ddd;
        }

        .table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }

        .table td a {
            display: inline-block;
            padding: 1px 2px;
            margin: 0 1px;
            transition: all 0.3s ease;
        }

            .table td a:hover {
                transform: scale(1.1);
                background-color: #ddd;
            }

    .create-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .create-link:hover {
            background-color: #ddd;
            color: #4CAF50;
        }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordHash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRegistered)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRegistered)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCustomer", new { id = item.CustomerID }) |
                @Html.ActionLink("Details", "DetailCustomer", new { id = item.CustomerID }) |
                @Html.ActionLink("Delete", "DeleteCustomer", new { id = item.CustomerID })
            </td>
        </tr>
    }

</table>