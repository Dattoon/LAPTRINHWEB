
@{
    ViewBag.Title = "MyBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using LAPTRINHWEB.Models


@model List<BookingViewModel>

@foreach (var viewModel in Model)
{
    <h2>Đặt chỗ ID: @viewModel.Booking.BookingID</h2>

    <h3>Chi tiết đặt chỗ:</h3>
    foreach (var detail in viewModel.BookingDetails)
    {
        <p>Chi tiết đặt chỗ ID: @detail.BookingDetailID</p>
        <!-- Thêm thông tin khác về chi tiết đặt chỗ nếu muốn -->
    }

    <h3>Thông tin ghế:</h3>
    foreach (var seat in viewModel.Seats)
    {
        <p>Số ghế: @seat.SeatNumber</p>
        <p>Loại ghế: @seat.SeatClass</p>
        <p>Giá: @seat.Price</p>
    }

    <h3>Thông tin chuyến bay:</h3>
    foreach (var flight in viewModel.Flights)
    {
        <p>Chuyến bay ID: @flight.FlightID</p>
        <p>Thời gian khởi hành: @flight.DepartureTime</p>
        <p>Thời gian đến: @flight.ArrivalTime</p>
    }

    <h3>Thông tin hãng hàng không:</h3>
    foreach (var airline in viewModel.Airlines)
    {
        <p>Tên hãng: @airline.AirlineName</p>
    }

    <hr />
    <!-- Tạo một đường kẻ ngang để phân tách các đặt chỗ -->
}
