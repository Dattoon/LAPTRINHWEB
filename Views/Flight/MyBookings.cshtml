@{
    ViewBag.Title = "MyBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using LAPTRINHWEB.Models
@model List<BookingViewModel>
<div>
    @foreach (var viewModel in Model)
    {
        <table class="booking-table">
            <tr>
                <th>Đặt chỗ ID</th>
                <th>Chi tiết đặt chỗ</th>
                <th>Thông tin ghế</th>
                <th>Thông tin chuyến bay</th>
                <th>Thông tin hãng hàng không</th>
            </tr>
            <tr>
                <td>@viewModel.Booking.BookingID</td>
                <td>
                    @Html.Raw(string.Join("<br/>", viewModel.BookingDetails.Select(detail => $"ID: {detail.BookingDetailID}")))
                </td>
                <td>
                    @Html.Raw(string.Join("<br/>", viewModel.Seats.Select(seat => $"Số: {seat.SeatNumber}, Loại: {seat.SeatClass}, Giá: {seat.Price}")))
                </td>
                <td>
                    @Html.Raw(string.Join("<br/>", viewModel.Flights.Select(flight => $"ID: {flight.FlightID}, Khởi hành: {flight.DepartureTime}, Đến: {flight.ArrivalTime}")))
                </td>
                <td>
                    @Html.Raw(string.Join("<br/>", viewModel.Airlines.Select(airline => airline.AirlineName)))
                </td>
            </tr>
        </table>
    }
</div>
!-- Tạo một đường kẻ ngang để phân tách các đặt chỗ -->
}
<style>
    .booking-table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }

        .booking-table th, .booking-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .booking-table th {
            background-color: #f2f2f2;
        }

        .booking-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .booking-table tr:hover {
            background-color: #eaeaea;
        }

        /* Thêm đường viền ngang cho mỗi hàng */
        .booking-table tr {
            border-bottom: 1px solid #ccc;
        }

        /* Thêm đường viền dọc cho mỗi cột */
        .booking-table td {
            border-right: 1px solid #ccc;
        }

            /* Loại bỏ đường viền cuối cùng của cột và hàng để tránh đường viền kép */
            .booking-table td:last-child, .booking-table tr:last-child {
                border-right: none;
                border-bottom: none;
            }

</style>