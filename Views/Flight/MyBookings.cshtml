
@{
    ViewBag.Title = "Thông Tin Đặt Vé Của Tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<LAPTRINHWEB.Models.BookingViewModel>


<h2>Thông Tin Đặt Vé Của Tôi</h2>

@if (Model != null && Model.Count > 0)
{
    foreach (var bookingViewModel in Model)
    {
        <div class="booking">
            <h3>Mã Đặt Vé: @bookingViewModel.Booking.BookingID</h3>
            <p>Ngày Đặt: @bookingViewModel.Booking.BookingDate</p>
            <p>Thanh Toán: @(bookingViewModel.Booking.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</p>
            <p>Khứ Hồi: @(bookingViewModel.Booking.IsRoundTrip ? "Có" : "Không")</p>

            <h4>Chi Tiết Vé:</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã Chuyến Bay</th>
                        <th>Số Ghế</th>
                        <th>Hạng Ghế</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in bookingViewModel.BookingDetails)
                    {
                        <tr>
                            <td>@detail.OutboundFlightID</td>
                            <td>@detail.Seat.SeatNumber</td>
                            <td>@detail.Seat.SeatClass</td>
                            <td>@detail.Seat.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
else
{
    <p>Bạn chưa có đặt vé nào.</p>
}
