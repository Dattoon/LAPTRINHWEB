@{
    ViewBag.Title = "MyBookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using LAPTRINHWEB.Models
@model List<BookingViewModel>

@foreach (var viewModel in Model)
{
    <h2>Đặt chỗ ID: @viewModel.Booking.BookingID</h2>

    <h3>Chi tiết đặt chỗ:</h3>
    @Html.Raw(string.Join("<br/>", viewModel.BookingDetails.Select(detail => $"Chi tiết đặt chỗ ID: {detail.BookingDetailID}")))

    <h3>Thông tin ghế:</h3>
    @Html.Raw(string.Join("<br/>", viewModel.Seats.Select(seat => $"Số ghế: {seat.SeatNumber}<br/>Loại ghế: {seat.SeatClass}<br/>Giá: {seat.Price}")))

    <h3>Thông tin chuyến bay:</h3>
    @Html.Raw(string.Join("<br/>", viewModel.Flights.Select(flight => $"Chuyến bay ID: {flight.FlightID}<br/>Thời gian khởi hành: {flight.DepartureTime}<br/>Thời gian đến: {flight.ArrivalTime}")))

    <h3>Thông tin hãng hàng không:</h3>
    @Html.Raw(string.Join("<br/>", viewModel.Airlines.Select(airline => $"Tên hãng: {airline.AirlineName}")))

    <hr />
 <!-- Tạo một đường kẻ ngang để phân tách các đặt chỗ -->
}
