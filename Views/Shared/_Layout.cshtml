<style>
    .box-destination {
        position: relative;
        background-size: cover;
        background-position: center;
        height: 300px;
        /* Adjust as needed */
        border-radius: 15px;
        /* Adjust as needed */
        overflow: hidden;
        transition: .5s ease;
        backface-visibility: hidden;
    }

        .box-destination .description,
        .box-destination .overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background: rgba(0, 0, 0, 0.5);
            /* Adjust as needed */
            color: #fff;
            transition: .5s ease;
            backface-visibility: hidden;
        }

        .box-destination .overlay {
            background: rgba(0, 0, 0, 0);
            opacity: 0;
            top: 0;
        }

        .box-destination:hover .overlay {
            opacity: 1;
        }

        .box-destination .description .city {
            font-size: 24px;
            /* Adjust as needed */
            font-weight: bold;
        }

        .box-destination .description .detail,
        .box-destination .overlay .extra-info {
            font-size: 16px;
            /* Adjust as needed */
        }

        .box-destination .description .btn-book {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background: #ff0000;
            /* Adjust as needed */
            color: #fff;
            text-decoration: none;
        }
</style>

