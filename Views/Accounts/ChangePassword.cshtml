
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LAPTRINHWEB.Models.Customer

@{
    ViewBag.Title = "Thay đổi mật khẩu";
}

<section class="container-login">
    <div class="container">
        <form action="" method="POST" class="form" id="form-2">
            <h3>Đổi mật khẩu</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CustomerID)

                    <div class="form-group">
                        @Html.Label("Mật khẩu cũ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="password" name="oldPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Mật khẩu mới", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="password" name="newPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Xác nhận mật khẩu mới", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="password" name="confirmPassword" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thay đổi mật khẩu" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </form>
    </div>
</section>
<style>
    .form-group {
        color: #5fa8d3;
        padding: 5px;
    }

    .container-login {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
        background-color: #f7f7f7;
    }

    .form {
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 370px;
        margin: auto;
    }



    .container-form-input {
        position: relative;
        margin-bottom: 15px;
    }

        .container-form-input input[type='text'],
        .container-form-input input[type='password'] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 20px;
        }

        .container-form-input label {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            background-color: white;
            padding: 0 5px;
            transition: all 0.3s ease;
        }

        .container-form-input input:focus + label,
        .container-form-input input:not(:placeholder-shown) + label {
            top: -10px;
            font-size: 12px;
            color: #5fa8d3;
        }

    .form-sumit {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #5fa8d3;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .form-sumit:hover {
            background-color: #3e8ecf;
        }

    .link-a {
        text-align: center;
        margin-top: 10px;
    }

    input[type='submit'] {
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #5fa8d3;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        input[type='submit']:hover {
            background-color: #3e8ecf;
        }
</style>
