


@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<h2>Đặt lại mật khẩu</h2>

<form action="/Accounts/ResetPassword" method="post">
    <label for="resetCode">Mã đặt lại mật khẩu:</label>
    <input type="text" id="resetCode" name="resetCode" required />
    <label for="newPassword">Mật khẩu mới:</label>
    <input type="password" id="newPassword" name="newPassword" required />
    <input type="submit" value="Đặt lại mật khẩu" />
</form>
